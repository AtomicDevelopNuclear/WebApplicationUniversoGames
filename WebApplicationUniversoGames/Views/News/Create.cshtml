<form method="post" asp-action="Create" class="customForm">
    <div class="mb-3">
        <label asp-for="Title" class="form-label">Title</label>
        <input asp-for="Title" class="form-control" id="" placeholder="Inserisci Titolo...">
    </div>
    <div class="mb-3">
        <label asp-for="Category" class="form-label">Category</label>
        <input asp-for="Category" class="form-control" id="" placeholder="Inserisci Categoria...">
    </div>
    <div class="mb-3">
        <label asp-for="Image" class="form-label">Image</label>
        <input asp-for="Image" class="form-control" id="" placeholder="Inserisci Immagine...">
    </div>
    <div class="mb-3">
        <label asp-for="Content" class="form-label">Content</label>
        <textarea asp-for="Content" class="form-control" id="" rows="10"></textarea>
    </div>
    <div class="form-group row">
        <div class="col">
            <input type="submit" name="" value="Create" class="btn btn-info" width="65" />
            <a asp-action="Index" class="btn btn-outline-info" width="65">Indietro</a>
        </div>
    </div>

</form>