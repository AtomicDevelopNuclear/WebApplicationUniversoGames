@model WebApplicationUniversoGames.Models.News
@{
    ViewData["Title"] = "Update";
}

<h1>Update News Su @Model.Title?</h1>
<form asp-action="Update" method="post">
    <input asp-for="Id" hidden />
    <div class="mb-3">
        <label asp-for="Title" class="form-label">Title</label>
        <input asp-for="Title" class="form-control" >
    </div>
    <div class="mb-3">
        <label asp-for="Category" class="form-label">Category</label>
        <input asp-for="Category" class="form-control" >
    </div>
    <div class="mb-3">
        <label asp-for="Image" class="form-label">Image</label>
        <input asp-for="Image" class="form-control" >
    </div>
    <div class="mb-3">
        <label asp-for="Content" class="form-label">Content</label>
        <textarea asp-for="Content" class="form-control" rows="10" ></textarea>
    </div>
    <div class="form-group row">
        <div class="col">
            <input type="submit" value="Update" class="btn btn-success" width="65" />
            <a asp-action="Index" class="btn btn-outline-info" width="65">Indietro</a>
        </div>
    </div>
</form>
