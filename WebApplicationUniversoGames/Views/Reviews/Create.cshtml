@using WebApplicationUniversoGames.Enums
@model WebApplicationUniversoGames.ViewModel.ReviewsViewModel
@{
    ViewData["Title"] = "Create Review";
}

<h1>Create - Reviews</h1>
<form asp-action="Create" method="post" class="customForm" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="Title" class="form-label">Title</label>
        <input asp-for="Title" class="form-control" placeholder="Inserisci Titolo...">
        <span asp-validation-for="Title"></span>
    </div>
    <div class="mb-3">
        <select asp-for="Category" class="form-control" asp-items="Html.GetEnumSelectList<Categories>()">
            <option>Please choose a category</option>
        </select>
        <span asp-validation-for="Category"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Content" class="form-label">Review</label>
        <textarea asp-for="Content" class="form-control" placeholder="Inserisci Recensione..." rows="10"></textarea>
        <span asp-validation-for="Content"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Score" class="form-label">Score</label>
        <input asp-for="Score" type="number" step="0.50" max="10" class="form-control" placeholder="Inserisci Score...">
        <span asp-validation-for="Content"></span>
    </div>
    <div class="mb-3">
        <div class="custom-file">
            <label asp-for="UploadedImage" class="control-label">Please choose a file</label>
            <input asp-for="UploadedImage" type="file" class="form-control-file">
        </div>
        <span asp-validation-for="UploadedImage" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <div class="col">
            <input type="submit" name="" value="Create" class="btn btn-info" width="65" />
            <a asp-action="Index" class="btn btn-outline-info" width="65">Indietro</a>
        </div>
    </div>
</form>
