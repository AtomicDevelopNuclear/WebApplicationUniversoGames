@model WebApplicationUniversoGames.Models.Review
@{
    ViewData["Title"] = "Create";
}

<h1>Create - Reviews</h1>
<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Title" class="form-label">Title</label>
        <input asp-for="Title" class="form-control" placeholder="Inserisci Titolo...">
    </div>
    <div class="mb-3">
        <label asp-for="Rev" class="form-label">Review</label>
        <textarea asp-for="Rev" class="form-control" placeholder="Inserisci Recensione..." rows="10"></textarea>
    </div>
    <div class="mb-3">
        <label asp-for="Score" class="form-label">Score</label>
        <input asp-for="Score" type="number" step="0.50" max="10" class="form-control" placeholder="Inserisci Score...">
    </div>
    <div class="mb-3">
        <label asp-for="Image" class="form-label">Image</label>
        <input asp-for="Image" class="form-control" placeholder="Inserisci Link Immagine...">
    </div>
    <div class="form-group row">
        <div class="col">
            <input type="submit" name="" value="Create" class="btn btn-info" width="65" />
            <a asp-action="Index" class="btn btn-outline-info" width="65">Indietro</a>
        </div>
    </div>
</form>
