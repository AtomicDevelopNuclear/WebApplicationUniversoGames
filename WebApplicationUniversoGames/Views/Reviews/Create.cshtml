@model WebApplicationUniversoGames.Models.Review
@{
    ViewData["Title"] = "Create Review";
}

<h1>Create - Reviews</h1>
<form asp-action="Create" method="post" class="customForm">
    <div class="mb-3">
        <label asp-for="Title" class="form-label">Title</label>
        <input asp-for="Title" class="form-control" placeholder="Inserisci Titolo...">
        <span asp-validation-for="Title"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Category" class="form-label">Category</label>
        <input asp-for="Category" class="form-control" placeholder="Inserisci Titolo...">
        <span asp-validation-for="Category"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Content" class="form-label">Review</label>
        <textarea asp-for="Content" class="form-control" placeholder="Inserisci Recensione..." rows="10"></textarea>
        <span asp-validation-for="Content"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Score" class="form-label">Score</label>
        <input asp-for="Score" type="number" step="0.50" max="10" class="form-control" placeholder="Inserisci Score...">
        <span asp-validation-for="Content"></span>
    </div>
    <div class="mb-3">
        <label asp-for="CoverImageFile" class="form-label">Image</label>
        <input asp-for="CoverImageFile" type="file" class="form-control-file" >
    </div>
    <div class="form-group row">
        <div class="col">
            <input type="submit" name="" value="Create" class="btn btn-info" width="65" />
            <a asp-action="Index" class="btn btn-outline-info" width="65">Indietro</a>
        </div>
    </div>
</form>
