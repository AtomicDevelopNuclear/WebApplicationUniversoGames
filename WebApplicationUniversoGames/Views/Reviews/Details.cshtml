@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserInManager
@model WebApplicationUniversoGames.Models.Review

@{
    ViewData["Title"] = "Details";
}


<br />
<br />
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <!-- Featured blog post-->
            <div class="card mb-4">
                <a href="#!"><img class="card-img-top" src="~/ReviewsUploads/@Model.CoverImage" alt="..." /></a>
                <div class="card-body">
                    <div class="small text-muted">@Model.Date.ToString("yyyy-MM-dd")</div>
                    <h2 class="card-title">@Model.Title</h2>
                    <h4>@Model.Category</h4>
                    <p class="card-text">@Model.Content</p>
                    <p class="card-text">Score : @Model.Score <i class="fas fa-star text-warning"></i></p>
                    <div class="row">
                        <div class="col-6">
                            @if (SignInManager.IsSignedIn(User))
                            {
                                <a class="btn btn-danger mx-1" asp-action="Delete" asp-controller="Reviews" asp-route-id="@Model.Id">Delete</a>
                                <a class="btn btn-warning mx-1" asp-action="Update" asp-controller="Reviews" asp-route-id="@Model.Id">Update</a>
                            }
                        </div>
                        <div class="col-6 text-right">
                            <a class="btn btn-info" asp-action="Index" asp-controller="Reviews">Go back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

