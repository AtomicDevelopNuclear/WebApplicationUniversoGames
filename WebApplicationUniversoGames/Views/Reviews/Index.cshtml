@model IEnumerable<WebApplicationUniversoGames.Models.Review>
@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <div class="row">
        <div class="col-6">
            <h1>Index - Reviews</h1>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" asp-controller="Reviews" class="btn btn-outline-primary">Crea</a>
        </div>
    </div>
    @if (Model.Count() > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Date</th>
                    <th scope="col">Rev</th>
                    <th scope="col">Score</th>
                    <th scope="col">Image</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var reviews in Model)
                {
                <tr>
                    <td width="15%">@reviews.Title</td>
                    <td width="15%">@reviews.Date.ToShortDateString()</td>
                    <td width="15%">@reviews.Rev</td>
                    <td width="15%">@reviews.Score</td>
                    <td width="15%">@reviews.Image</td>
                    <td width="15%">
                        <div class="btn-group" role="group">
                            <a class="btn btn-danger mx-1" asp-action="Delete" asp-controller="Reviews" asp-route-id="@reviews.Id">Delete</a>
                            <a class="btn btn-warning mx-1" asp-action="Update" asp-controller="Reviews" asp-route-id="@reviews.Id">Modify</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Non ci sono Reviews</p>
    }
</div>