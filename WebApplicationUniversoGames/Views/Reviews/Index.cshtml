@*
        vecchio e classico sistema IE per prendere le notizie reviews
    @model IEnumerable<WebApplicationUniversoGames.Models.Review>
    @{
        ViewData["Title"] = "Index";
    }*@

@using X.PagedList.Mvc.Core; @*import this so we get our HTML Helper*@
@using X.PagedList; @*import this so we can cast our list to IPagedList (only necessary because ViewBag is dynamic)*@
@using X.PagedList.Mvc.Core.Fluent
@{
    ViewBag.Title = "Reviews | Universo Games";
}

<br /><br />
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <!-- Featured blog post-->
            <div class="card mb-4">
                <a href="#!"><img class="card-img-top" src="https://www.telefilm-central.org/wp-content/uploads/2019/05/cleganebowl-game-of-thrones-1.jpg" alt="..." /></a>
                <div class="card-body">
                    <div class="small text-muted">@DateTime.Now.ToString("yyy-MM-dd")</div>
                    <h2 class="card-title">In this section yo can create a new content for our news section. Feel free to be not politically correct</h2>
                    <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Reiciendis aliquid atque, nulla? Quos cum ex quis soluta, a laboriosam. Dicta expedita corporis animi vero voluptate voluptatibus possimus, veniam magni quis!</p>
                    <a asp-action="Create" asp-controller="Reviews" class="btn btn-primary w-100">Create a Review <i class="fa-solid fa-plus"></i></a>
                </div>
            </div>
            @* se c'e' una review me la fai vedere con queste colonne
                    altrimenti mi fai uscire l'ELSE

                @if (Model.Count() > 0)
                {
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Title</th>
                                <th scope="col">Date</th>
                                <th scope="col">Rev</th>
                                <th scope="col">Score</th>
                                <th scope="col">Image</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var reviews in Model)
                            {
                                <tr>
                                    <td width="15%">@reviews.Title</td>
                                    <td width="15%">@reviews.Date.ToShortDateString()</td>
                                    <td width="15%">@reviews.Rev</td>
                                    <td width="15%">@reviews.Score</td>
                                    <td width="15%">@reviews.Image</td>
                                    <td width="15%">
                                        <div class="btn-group" role="group">
                                            <a class="btn btn-danger mx-1" asp-action="Delete" asp-controller="Reviews" asp-route-id="@reviews.Id">Delete</a>
                                            <a class="btn btn-warning mx-1" asp-action="Update" asp-controller="Reviews" asp-route-id="@reviews.Id">Modify</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>Non ci sono Reviews</p>
                }*@

            <div class="row">

                @foreach (var reviews in ViewBag.PageList)
                {
                    <div class="col-lg-6">
                        <!-- Blog post-->
                        <div class="card mb-4">
                            <a><img class="card-img-top" src="@reviews.Image" alt="..." /></a>
                            <div class="card-body">
                                <div class="small text-muted">Published on: @reviews.Date</div>
                                <h2 class="card-title h4">@reviews.Title</h2>
                                <a>Recensione: @reviews.Rev</a>
                                <p class="card-text" id="">@reviews.Score</p>
                                <a class="btn btn-primary" asp-action="Details" asp-controller="Reviews" asp-route-id="@reviews.Id">Read More</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    @Html.PagedListPager((IPagedList)ViewBag.PageList, page => Url.Action("Index", new { page }))
</div>