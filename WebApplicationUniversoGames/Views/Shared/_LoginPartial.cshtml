@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserInManager
@if (SignInManager.IsSignedIn(User))
{
    <ul class="navbar-nav mr-2">
        <li class="nav-item active">
            <a class="nav-link" id="user" asp-area="" asp-controller="Account" asp-action="Logout">Hi @User.Identity.Name</a>
        </li>
        <li class="nav-item active">
            <a class="nav-link" id="user" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
        </li>
    </ul>
}
else
{
    <ul class="navbar-nav mr-2">
        <li class="nav-item active">
            <a class="nav-link" id="user" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
        </li>
        <li class="nav-item active">
            <a class="nav-link" id="user" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
        </li>
        </ul>
        }
