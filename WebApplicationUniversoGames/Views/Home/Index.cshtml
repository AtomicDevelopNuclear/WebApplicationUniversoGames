@model Tuple<List<News>, List<Review>>
@{
    ViewData["Title"] = "Home Page";
}

<!-- Page content-->
<div class="container">
    <div class="row">
        <!-- Blog entries-->
        @foreach (var news in Model.Item1)
        {
            <div class="col-lg-6">
                <!-- Blog post-->
                <div class="card mb-4">
                    <a><img class="card-img-top" src="@news.Image" alt="..." /></a>
                    <div class="card-body">
                        <div class="small text-muted">Published on: @news.DateOfPublish</div>
                        <h2 class="card-title h4">@news.Title</h2>
                        <a>Category: @news.Category</a>
                        <p class="card-text">Text preview (Try to use whitespace or similar)</p>
                        <a class="btn btn-primary" asp-action="Details" asp-controller="News" asp-route-id="@news.Id">Read More</a>
                    </div>
                </div>
            </div>
        }
        @foreach (var review in Model.Item2)
        {
            <div class="col-lg-6">
                <!-- Blog post-->
                <div class="card mb-4">
                    <a><img class="card-img-top" src="@review.Image" alt="..." /></a>
                    <div class="card-body">
                        <div class="small text-muted">Published on: @review.Date</div>
                        <h2 class="card-title h4">@review.Title</h2>
                        <a>Score: @review.Score</a>
                        <p class="card-text">Text preview (Try to use whitespace or similar)</p>
                        <a class="btn btn-primary" asp-action="Details" asp-controller="News" asp-route-id="@review.Id">Read More</a>
                    </div>
                </div>
            </div>
        }

    </div>
            <!-- Pagination-->
            <nav aria-label="Pagination">
                <hr class="my-0" />
                <ul class="pagination justify-content-center my-4">
                    <li class="page-item disabled"><a class="page-link" href="#" tabindex="-1" aria-disabled="true">Newer</a></li>
                    <li class="page-item active" aria-current="page"><a class="page-link" href="#!">1</a></li>
                    <li class="page-item"><a class="page-link" href="#!">2</a></li>
                    <li class="page-item"><a class="page-link" href="#!">3</a></li>
                    <li class="page-item disabled"><a class="page-link" href="#!">...</a></li>
                    <li class="page-item"><a class="page-link" href="#!">15</a></li>
                    <li class="page-item"><a class="page-link" href="#!">Older</a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>