@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserInManager
@model Tuple<List<News>, List<Review>>
@{
    ViewData["Title"] = "Home Page";
}

<!-- Page content-->
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <!-- Featured blog post-->
            <div class="card mb-4">
                <a href="#!"><img class="card-img-top" src="https://www.telefilm-central.org/wp-content/uploads/2019/05/cleganebowl-game-of-thrones-1.jpg" alt="..." /></a>
                <div class="card-body">
                    <div class="small text-muted">@DateTime.Now.ToString("yyy-MM-dd")</div>
                    <h2 class="card-title">In this section yo can create a new content for our news section. Feel free to be not politically correct</h2>
                    <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Reiciendis aliquid atque, nulla? Quos cum ex quis soluta, a laboriosam. Dicta expedita corporis animi vero voluptate voluptatibus possimus, veniam magni quis!</p>
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <a asp-action="Create" asp-controller="News" class="btn btn-primary w-100">Create a New Article</a>
                    }

                </div>
            </div>
            <div class="row">
                <!-- Blog entries-->
                @foreach (var news in Model.Item1)
                {
                    <div class="col-lg-6">
                        <!-- Blog post-->
                        <div class="card mb-4">
                            <a><img class="card-img-top" src="@news.Image" alt="..." /></a>
                            <div class="card-body">
                                <div class="small text-muted">Published on: @news.DateOfPublish</div>
                                <h2 class="card-title h4">@news.Title</h2>
                                <a>Category: @news.Category</a>
                                <p class="card-text">Text preview (Try to use whitespace or similar)</p>
                                <a class="btn btn-primary" asp-action="Details" asp-controller="News" asp-route-id="@news.Id">Read More</a>
                            </div>
                        </div>
                    </div>
                }
                @foreach (var review in Model.Item2)
                {
                    <div class="col-lg-6">
                        <!-- Blog post-->
                        <div class="card mb-4">
                            <a><img class="card-img-top" src="@review.Image" alt="..." /></a>
                            <div class="card-body">
                                <div class="small text-muted">Published on: @review.Date</div>
                                <h2 class="card-title h4">@review.Title</h2>
                                <a>Score: @review.Score</a>
                                <p class="card-text">Text preview (Try to use whitespace or similar)</p>
                                <a class="btn btn-primary" asp-action="Details" asp-controller="News" asp-route-id="@review.Id">Read More</a>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>